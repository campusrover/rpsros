<launch>

  <include file="$(find plat)/launch/mini_bringup.launch" />
  <include file="$(find plat)/launch/joy_teleop.launch" />

  <node pkg="cv_camera" type="cv_camera_node" name="cv_camera" output="screen">
    <param name="rate" value="30" />
    <param name="device_id" value="0" />
    <param name="image_width" value="320" />
    <param name="image_height" value="240" />
    <param name="frame_id" value="camera" />
    <param name="camera_info_url" value="package://sodacan/params/camera.yaml"/>
    <param name="cv_cap_prop_saturation" value="-100" />
  </node>

</launch>
